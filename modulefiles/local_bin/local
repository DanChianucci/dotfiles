#%Module
proc ModulesHelp { } {
    global ver

    puts stderr "local_bin"
    puts stderr "\nVersion ${ver}\n"
}

# for Tcl script use only
set     ver          "local"
set     basepath     "/home/chianucci/local"


module-whatis   "XCov ${ver}"
append-path PATH            "${basepath}/bin"
append-path LD_LIBRARY_PATH "${basepath}/lib"
append-path LIBRARY_PATH    "${basepath}/lib"
append-path CPATH           "${basepath}/include"
append-path MANPATH         "${basepath}/share/man"
append-path INFOPATH        "${basepath}/share/info"
