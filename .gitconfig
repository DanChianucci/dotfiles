[core]
  autocrlf = false
  safecrlf = warn
  eol      = native
  editor   = vim +star

[user]
  name  = Dan Chianucci
  email = dan.chianucci@gmail.com

[alias]
  co    = checkout
  ci    = commit
  br    = branch
  st    = status
  stat  = status

  unstage = reset HEAD --

  gdiff = difftool

  last = log -1 HEAD
  lol   = log --graph --decorate --pretty=oneline --abbrev-commit
  lola  = log --graph --decorate --pretty=oneline --abbrev-commit --all


[color]
  diff        = auto
  status      = auto
  branch      = auto
  interactive = auto
  ui          = true
  pager       = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = red


[push]
  default = simple

[diff]
  tool = p4merge
  #tool=bc3

[difftool]
  prompt          = false
  keepTemporaries = false
  keepBackup      = false

[difftool "p4merge"]
  cmd = p4merge "$LOCAL" "$REMOTE"
  trustExitCode   = false


[merge]
  tool = p4merge
  #tool =bc3

[mergetool]
  prompt          = false
  keepTemporaries = false
  keepBackup      = false

[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode   = false

[include]
  path = ~/.gitconfig.local
