proc ModulesHelp { } {
    global version

    puts stderr "\tLocal Python"
    puts stderr "\n\tVersion ${version}\n"
}

# for Tcl script use only
set     version      "3.7.4"
set     pythonroot  "/home/chianucci/python3"
set     pythonbin   "${pythonroot}/bin"
set     pythonlib   "${pythonroot}/lib"

setenv PYTHON_ROOT ${pythonroot}
setenv PYTHON_BIN  ${pythonbin}
prepend-path PATH  ${pythonbin}
prepend-path LD_LIBRARY_PATH ${pythonlib}

module-whatis	"python ${version}"
