#%Module
proc ModulesHelp { } {
    global ver

    puts stderr "local_bin"
    puts stderr "\nVersion ${ver}\n"
}

# for Tcl script use only
set     ver          "local"
set     basepath     "/home/chianucci/local"


module-whatis   "XCov ${ver}"
prepend-path PATH            "${basepath}/bin"
prepend-path LD_LIBRARY_PATH "${basepath}/lib"
prepend-path LIBRARY_PATH    "${basepath}/lib"
prepend-path CPATH           "${basepath}/include"
prepend-path MANPATH         "${basepath}/share/man"
prepend-path INFOPATH        "${basepath}/share/info"
