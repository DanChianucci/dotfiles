#%Module
conflict xregmap

if { ! [is-loaded python] } {
  module load python
}

if { ! [is-loaded texlive] } {
  module load texlive
}

prereq python
prereq texlive

#Tcl script use only
set ver                "local"
set xregmap_proj       "/home/chianucci/tools/xregmap"
set xregmap_root       "${xregmap_proj}/xregmap"
set xregmap_bin        "${xregmap_root}/bin"

module-whatis   "XREGMAP ${ver}"


setenv XREGMAP_PROJ ${xregmap_proj}
setenv XREGMAP_ROOT ${xregmap_root}
setenv XREGMAP_BIN  ${xregmap_bin}
setenv TEXINPUTS    .:${xregmap_root}/texmf//:


prepend-path PATH   ${xregmap_bin}
set-alias iplint "xmllint --noout --schema ${xregmap_proj}/snapshots/ieee-1685-2014/index.xsd"
